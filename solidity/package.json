{
  "name": "@HerodotusDev/satellite-solidity",
  "files": [
    "src/**/*.sol",
    "lib/**/*.sol"
  ],
  "scripts": {
    "preinstall": "npx only-allow bun",
    "clear": "rm -rf out cache typechain-types ignition/deployments deployments-zk cache_hardhat cache_hardhat-zk broadcast artifacts artifacts-zk",
    "clear:full": "bun run clear && rm -rf node_modules",
    "compile": "bun hardhat compile",
    "satellite:deploy": "bun run compile && bun run scripts/satelliteDeploy.ts",
    "satellite:upgrade": "bun run compile && bun run scripts/satelliteUpgrade.ts",
    "generate_abi": "bun run scripts/generateAbi.ts",
    "anvil": "anvil",
    "anvil:fork": "bash scripts/anvilFork.bash",
    "script": "bun run scripts/script.ts",
    "script:local": "bun run scripts/script.ts 31337",
    "test": "bun hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "bun-types": "latest",
    "chai": "^5.2.0",
    "ethers": "^6.4.0",
    "forge-std": "^1.1.2",
    "only-allow": "^1.2.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "hardhat": "^2.26.1"
  }
}
